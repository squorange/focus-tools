{
  "name": "@focus-tools/design-system",
  "version": "0.1.0",
  "description": "Design system tokens and components for Focus Tools",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./tokens": {
      "import": "./tokens/index.ts",
      "types": "./tokens/index.ts"
    },
    "./styles": "./styles/index.css",
    "./styles/tokens.css": "./styles/tokens.css",
    "./tailwind.preset": "./tailwind.preset.cjs",
    "./components": {
      "import": "./components/index.ts",
      "types": "./components/index.ts"
    },
    "./hooks": {
      "import": "./hooks/index.ts",
      "types": "./hooks/index.ts"
    }
  },
  "files": [
    "dist",
    "tokens",
    "styles",
    "components",
    "hooks",
    "tailwind.preset.cjs"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint . --ext .ts,.tsx",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@storybook/addon-a11y": "^8.4.7",
    "@storybook/addon-essentials": "^8.4.7",
    "@storybook/addon-themes": "^8.4.7",
    "@storybook/react": "^8.4.7",
    "@storybook/react-vite": "^8.4.7",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.18",
    "postcss": "^8.4.35",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "storybook": "^8.4.7",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^5.1.4",
    "vitest": "^2.1.8"
  },
  "dependencies": {
    "framer-motion": "^11.0.8",
    "lucide-react": "^0.344.0"
  }
